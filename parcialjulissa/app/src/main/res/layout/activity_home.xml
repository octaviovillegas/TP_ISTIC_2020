<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="5dp"
tools:context=".HomeActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="14dp"
    android:layout_marginBottom="14dp"
    android:orientation="vertical">

    <TextView android:id="@+id/input_saldo_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Saldo"
        android:gravity="center"
        android:textSize="32dip"/>

        <TextView android:id="@+id/input_saldo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text=""
            android:gravity="center"
            android:textSize="24dip"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/saldoEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEnviarDinero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:text="Enviar Dinero"
        android:transitionName="buttonSignInTrans" />

    <TextView android:id="@+id/input_historico"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Mis transaciones"
        android:gravity="center"
        android:textSize="32dip"/>

</LinearLayout>
</LinearLayout>